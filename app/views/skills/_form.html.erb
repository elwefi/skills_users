<%= form_with(model: skill, local: true) do |form| %>
  <% if skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :name, id: :skill_name %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :parent_id, class: "col-2 col-form-label"%>
    <div class="col-10">
      <%= form.select :parent_id, form.object.skill_parents, id: :skill_parent_id , :include_blank => true, class: "custom-select my-1 mr-sm-2" %> 
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>



